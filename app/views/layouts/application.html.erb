<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
          "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ja" lang="ja">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta http-equiv="Content-Script-Type" content="text/javascript" />
    <meta http-equiv="Content-Style-Type" content="text/css" />
    <%= google_jsapi_tag %>
    <%= google_load_tag 'jquery', '1.3' %>
    <%= google_load_tag 'jqueryui', '1.7' %>
    <%= javascript_include_tag 'application' %>
    <%= yield :script %>
    <%= stylesheet_link_tag 'base' %>
    <%= stylesheet_link_tag 'bo' %>
    <%= yield :multi_auth_additional_head %>
    <title><%= @title %></title>
    <script type="text/javascript">
    //<![CDATA[
    jQuery(function($){
      if (navigator.cookieEnabled) {
        $("#cookie_check").hide();
      } else {
        $("#cookie_check").show();
      }
    });
    //]]>
    </script>
  </head>
  <body>
    <div id="wrapper">
      <div id="header">
        Header!
	  </div>
	  <div id="navigation">
		<ul>
          <li><%= link_to 'Home', root_path %></li>
          <%- if logged_in? -%>
            <li><%= link_to 'Logout', { :controller => '/auth', :action => 'logout' }, :method => :post %></li>
          <%- else -%>
            <li><%= link_to 'Signup', :controller => '/signup' %></li>
            <li><%= link_to 'Login', :controller => '/auth' %></li>
          <%- end -%>
		</ul>
	  </div>
	  <div id="leftcolumn">
        <div id="cookie_check" style="display:none">
          <%=h("Please enable cookie.") %>
        </div>
        <noscript>
          <%=h("Please enable javascript and cookie.") %>
        </noscript>
        <div class="notice"><p><%= flash[:notice] %></p></div>
        <div class="error"><p><%= flash[:error] %></p></div>

        <%= yield %>

	  </div>
	  <div id="rightcolumn">
		
	    Right Column
		
	  </div>
	  <div id="footer">
		
		This is the Footer		
		
	  </div>
    </div>
    <%- javascript_tag do -%>
      justifyHeight();
    <%- end -%>
  </body>
</html>
