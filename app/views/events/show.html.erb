<%- @title = "詳細" -%>

<h1><%= @title %></h1>

<table class="event">
  <tbody>
    <tr><th>日付</th><td><%=h @event.spent_on %></td></tr>
    <tr><th>タイトル</th><td><%=h @event.title %></td></tr>
    <tr><th>ノート</th><td><%=h @event.note %></td></tr>
  </tbody>
</table>

<table class="items">
  <thead><tr><th>タグ</th><th>入金</th><th>出金</th></tr></thead>
  <tbody>
    <%- @event.items.each do |item| -%>
      <tr>
        <td class="tag"><%=h item.tag_list %></td>
        <td class="founds-in"><%=h item.founds_in %></td>
        <td class="founds-out"><%=h item.founds_out %></td>
      </tr>
    <%- end -%>
  </tbody>
</table>

<p>
  <%= link_to 'Back', events_path %>
  <%= link_to 'Edit', edit_event_path(@event) %>
  <% if @event.template? -%>
    <%= link_to 'Create from Template', new_event_path(:template_id => @event.id) %>
  <% end -%>

</p>
